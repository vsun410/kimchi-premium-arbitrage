# Application
APP_NAME="Kimchi Premium Control Dashboard"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://kimchi_user:kimchi_password@localhost:5432/kimchi_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# External APIs (encrypted values will be stored here)
UPBIT_API_KEY=
UPBIT_SECRET_KEY=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090